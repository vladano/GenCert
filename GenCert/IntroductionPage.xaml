<UserControl x:Class="GenCert.IntroductionPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dragablz="clr-namespace:Dragablz;assembly=Dragablz"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="400"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid Margin="0" Background="{DynamicResource AccentColorBrush}" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <TextBlock TextWrapping="WrapWithOverflow" FontSize="32" FontWeight="Bold" 
                       VerticalAlignment="Center" HorizontalAlignment="Stretch" 
                       Foreground="{DynamicResource WhiteColorBrush}" Margin="0" 
                   TextAlignment="Center">
                <Run Text="GetCert PKI Application"/>
        </TextBlock>
    </Grid>
</UserControl>
